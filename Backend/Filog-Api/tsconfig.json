{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@controller/*":["controllers/*"],
    "@middleware":["middlewares/index"],
    "@route":["routes/index"],
    "@utils":["utils/index"],
    "@lib":["libs/index"],
    "@appwrite":["appwrite/index"],
    "@services":["services/index"],
    "@type/*":["types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules","dist"]
}
