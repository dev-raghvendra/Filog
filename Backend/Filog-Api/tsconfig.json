{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@controller/*":["controllers/*"],
    "@middleware":["middlewares/index"],
    "@router/*":["router/*"],
    "@utils/*":["utils/*"],
    "@lib":["libs/index"],
    "@services/*":["services/*"],
    "@type/*":["types/*"],
    "@db/*":["db/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules","dist"]
}
