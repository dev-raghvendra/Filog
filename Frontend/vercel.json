{
  "version": 2,
  "builds": [
    {
      "src": "vercel-functions/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/blog/:id",
      "destination": "/vercel-functions/meta-tags?id=:id"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "vercel-functions/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
